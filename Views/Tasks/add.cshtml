<!-- Views/Tasks/Add.cshtml -->
@model Task_Manager.Models.Task

@{
    ViewBag.Title = "Add Task";
}

<h2>Add Task</h2>

@using (Html.BeginForm("Add", "Tasks", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Title")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @style = "color: red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @style = "color: red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DueDate)
        @Html.TextBoxFor(model => model.DueDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.DueDate, "", new { @style = "color: red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.DropDownListFor(model => model.Status, Model.StatusOptions, "Select Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status, "", new { @style = "color: red"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Priority)
        @Html.DropDownListFor(model => model.Priority, Model.PriorityOptions, "Select Priority", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Priority, "", new { @style = "color: red"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeId)
        @Html.DropDownListFor(model => model.EmployeeId, Model.EmployeeIdOptions, "Select employee's ID", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @style = "color: red"})
    </div>
    <button type="submit" class="btn btn-primary">Add Task</button>
}

