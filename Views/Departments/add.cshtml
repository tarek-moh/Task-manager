@model Task_Manager.Models.department

@{
    ViewData["Title"] = "Add Department";
}

<h2>Add Department</h2>

@using (Html.BeginForm("add", "Departments", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Name, "", new { @style = "color: red" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.headID)
    @Html.DropDownListFor(model => model.headID, Model.EmployeeIdOptions, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.headID, "", new { @style = "color: red" })
</div>

<div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
</div>
}

<div>
    <a asp-controller="Tasks" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
